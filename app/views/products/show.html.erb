<div class="container main-content">
	<div class="row">
		<div class="col-sm-3">
			<div class="text-center"><p>CATEGORY</p></div>
			<% @genres.each do |genre| %>
				<div class="text-center">
					<%= link_to genre.name, genre_path(genre) %>
				</div>
			<% end %>
		</div>
		<div class="col-sm-4">
			<%= attachment_image_tag @product, :image, size: '300x250', fallback: "no_image.png", size: '300x250' %>
		</div>
		<div class="col-sm-5">
			<h4><%= @product.name %></h4>
			<p><%= @product.introduction %></p>
			<h6><%= @product.syouhizei(@product.price).to_s(:delimited) %>(税込)</h6>
		</div>
	</div>
</div>
