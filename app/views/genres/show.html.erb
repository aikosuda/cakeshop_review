<div class="container main-content">
	<div class="row">
		<div class="col-sm-3">
			<div class="text-center"><p>CATEGORY</p></div>
			<% @genres.each do |genre| %>
				<div class="text-center">
					<%= link_to genre.name, genre_path(genre) %>
				</div>
			<% end %>
		</div>
		<div class="col-sm-8">
			<h3>商品一覧</h3>
			<% @products.each do |product| %>
				<div>
					<%= link_to product_path(product) do %>
						<%= attachment_image_tag product, :image, size: '100x80', fallback: "no_image.png",size:'100x80' %>
					<% end %>
					<p><%= product.name %></p>
					<p><%= product.syouhizei(@product.price).to_s(:delimited) %></p>
				</div>
			<% end %>
			<%= paginate @products %>
		</div>
	</div>
</div>