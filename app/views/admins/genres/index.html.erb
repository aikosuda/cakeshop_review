<div class="container">
	<div class="row">
		<div class="text-center">
			<h3>ジャンル一覧・追加</h3>
			<%= form_for @genre, url: admins_genres_path do |f| %>
				<%= f.label :name, "ジャンル" %>
				<%= f.text_field :name %>
				<%= f.radio_button :is_active, true, :checked => true %>有効
				<%= f.radio_button :is_active, false %>無効
				<%= f.submit '登録', class: "btn btn-primary" %>
			<% end %>
		</div>
		<div class="col-sm-6 col-sm-offset-3">
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>ジャンル</th>
						<th>状態</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<td>
								<% if genre.is_active == true %>
								有効
								<% else %>
								無効
								<% end %>
							</td>
							<td>
								<%= link_to "編集", edit_admins_genre_path(genre), class: "btn btn-warning" %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>